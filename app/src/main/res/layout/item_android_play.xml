<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.soar.cloud.bean.ArticlesBean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ll_item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_new"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_new"
                    android:visibility="@{item.fresh?View.VISIBLE:View.GONE}" />

                <TextView
                    android:id="@+id/tv_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="7dp"
                    android:paddingTop="2dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="2dp"
                    android:text="@{item.chapterName}"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp"
                    tools:text="技术博客" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top">

                <ImageView
                    android:id="@+id/iv_image"
                    imgSource="@{item.envelopePic}"
                    placeholder="@{@drawable/ic_place_welfare}"
                    android:layout_width="60dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="7dp"
                    android:layout_toRightOf="@+id/iv_image"
                    android:lineSpacingExtra="4dp"
                    android:text="@{item.title}"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    tools:text="支付宝" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_content"
                android:layout_marginTop="13dp"
                android:text="@{item.niceDate}"
                android:textColor="@color/colorItemTitle"
                android:textSize="11sp"
                tools:text="2010-10-10" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="@{@string/string_dot(item.author)}"
                android:textColor="@color/colorItemTitle"
                android:textSize="11sp"
                tools:text="cloud" />

            <CheckBox
                android:id="@+id/vb_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:button="@drawable/selector_collect_check"
                android:gravity="center" />

        </RelativeLayout>

        <include layout="@layout/inc_line_h" />
    </RelativeLayout>
</layout>