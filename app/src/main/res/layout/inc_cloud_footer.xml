<?xml version="1.0" encoding="utf-8"?>
<com.soar.cloud.view.ClassicsCloudFooter xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cloud_footer"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anim_loading" />

    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/to_load_more"
        android:textColor="@color/colorTabText"
        android:textSize="14sp" />
</com.soar.cloud.view.ClassicsCloudFooter>
